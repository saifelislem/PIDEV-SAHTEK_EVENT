{% extends 'admin.html.twig' %}

{% block title %}Nouveau Produit Sponsoring{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Ajouter un nouveau produit de sponsoring</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Formulaire de produit</h6>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'form', 'novalidate': 'novalidate'}}) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.nom, null, {'label_attr': {'class': 'font-weight-bold text-primary'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control shadow-sm'}}) }}
                            {{ form_errors(form.nom, {'attr': {'class': 'text-danger small'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.quantite, null, {'label_attr': {'class': 'font-weight-bold text-primary'}}) }}
                            {{ form_widget(form.quantite, {'attr': {'class': 'form-control shadow-sm'}}) }}
                            {{ form_errors(form.quantite, {'attr': {'class': 'text-danger small'}}) }}
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group mb-3">
                            {{ form_label(form.description, null, {'label_attr': {'class': 'font-weight-bold text-primary'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control shadow-sm', 'rows': '3'}}) }}
                            {{ form_errors(form.description, {'attr': {'class': 'text-danger small'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.prix, null, {'label_attr': {'class': 'font-weight-bold text-primary'}}) }}
                            {{ form_widget(form.prix, {'attr': {'class': 'form-control shadow-sm'}}) }}
                            {{ form_errors(form.prix, {'attr': {'class': 'text-danger small'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.utilisateur, null, {'label_attr': {'class': 'font-weight-bold text-primary'}}) }}
                            {{ form_widget(form.utilisateur, {'attr': {'class': 'form-control shadow-sm selectpicker'}}) }}
                            {{ form_errors(form.utilisateur, {'attr': {'class': 'text-danger small'}}) }}
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group mb-3">
                            {{ form_label(form.contratSponsorings, null, {'label_attr': {'class': 'font-weight-bold text-primary'}}) }}
                            {{ form_widget(form.contratSponsorings, {'attr': {'class': 'form-control shadow-sm selectpicker'}}) }}
                            {{ form_errors(form.contratSponsorings, {'attr': {'class': 'text-danger small'}}) }}
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group mb-3">
                            {{ form_label(form.image, null, {'label_attr': {'class': 'font-weight-bold text-primary'}}) }}
                            <div class="custom-file">
                                {{ form_widget(form.image, {'attr': {'class': 'form-control-file custom-file-input'}}) }}
                                <label class="custom-file-label" for="{{ form.image.vars.id }}">Choisir un fichier</label>
                            </div>
                            {{ form_errors(form.image, {'attr': {'class': 'text-danger small'}}) }}
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-user btn-block btn-lg">Créer</button>
                {{ form_rest(form) }}
                {{ form_end(form) }}

                <a href="{{ path('app_produitsponsoring_index') }}" class="btn btn-secondary btn-user btn-block btn-lg mt-2">Retour à la liste</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.custom-file-input').on('change', function() {
                var fileName = $(this).val().split('\\').pop();
                $(this).siblings('.custom-file-label').text(fileName || 'Choisir un fichier');
            });
        });
    </script>
{% endblock %}