{% extends 'admin.html.twig' %}

{% block title %}Suivi des Réclamations{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800"></h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Liste des Suivis</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="thead-light">
                        <tr>
                            <th>Statut</th>
                            <th>Commentaire</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for suivi_reclamation in suivi_reclamations %}
                            <tr>
                                <td>{{ suivi_reclamation.status }}</td>
                                <td>{{ suivi_reclamation.commentaire }}</td>
                                <td>
                                    <a href="{{ path('app_suivi_reclamation_show', {'id': suivi_reclamation.id}) }}" class="btn btn-sm btn-info">Voir</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center">Aucun suivi trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <a href="{{ path('app_suivi_reclamation_new') }}" class="btn btn-primary btn-user mt-3">Créer un nouveau suivi</a>
            </div>
        </div>
    </div>
{% endblock %}