{% extends 'admin.html.twig' %}

{% block title %}Modifier le Suivi de Réclamation{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Modifier le Suivi de Réclamation</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Suivi #{{ suivi_reclamation.id }}</h6>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form'}}) }}
                <div class="form-group">
                    {{ form_label(form.status, null, {'label_attr': {'class': 'font-weight-bold text-gray-700'}}) }}
                    {{ form_widget(form.status) }}
                    {{ form_errors(form.status, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.commentaire, null, {'label_attr': {'class': 'font-weight-bold text-gray-700'}}) }}
                    {{ form_widget(form.commentaire) }}
                    {{ form_errors(form.commentaire, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.reclamation, null, {'label_attr': {'class': 'font-weight-bold text-gray-700'}}) }}
                    {{ form_widget(form.reclamation) }}
                    {{ form_errors(form.reclamation, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <button type="submit" class="btn btn-primary btn-user btn-block">Mettre à jour</button>
                {{ form_end(form) }}

                <a href="{{ path('app_suivi_reclamation_index') }}" class="btn btn-secondary btn-user btn-block mt-2">Retour à la liste</a>
            </div>
        </div>
    </div>
{% endblock %}