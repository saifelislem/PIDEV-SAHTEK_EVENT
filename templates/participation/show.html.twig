{% extends 'admin.html.twig' %}

{% block title %}Détails de la Participation{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Détails de la Participation</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Participation #{{ participation.id }}</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Utilisateur</th>
                        <td>{{ participation.utilisateur ? participation.utilisateur.nom ~ ' ' ~ participation.utilisateur.prenom ~ ' (' ~ participation.utilisateur.email ~ ')' : 'Non défini' }}</td>
                    </tr>
                    <tr>
                        <th>Événement</th>
                        <td>{{ participation.evenement ? participation.evenement.nom : 'Non défini' }}</td>
                    </tr>
                    <tr>
                        <th>Date d'inscription</th>
                        <td>{{ participation.dateInscription ? participation.dateInscription|date('d/m/Y H:i') : 'Non définie' }}</td>
                    </tr>
                    <tr>
                        <th>Moyen de paiement</th>
                        <td>{{ participation.moyenPaiement ?: 'Non défini' }}</td>
                    </tr>
                    </tbody>
                </table>
                <div class="mt-3">
                    <a href="{{ path('app_participation_index') }}" class="btn btn-sm btn-secondary" title="Retour à la liste">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <a href="{{ path('app_participation_edit', {'id': participation.id}) }}" class="btn btn-sm btn-primary" title="Modifier">
                        <i class="fas fa-edit"></i>
                    </a>
                    <form id="delete-form-{{ participation.id }}"
                          method="post"
                          action="{{ path('app_participation_delete', {'id': participation.id}) }}"
                          style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participation.id) }}">
                        <button type="button"
                                class="btn btn-sm btn-danger"
                                title="Supprimer"
                                onclick="confirmDelete({{ participation.id }}, '{{ (participation.utilisateur ? participation.utilisateur.nom ~ ' ' ~ participation.utilisateur.prenom : 'Participation #' ~ participation.id)|e('js') }}')">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete(id, nom) {
            Swal.fire({
                title: 'Confirmer la suppression',
                html: 'Voulez-vous vraiment supprimer la participation de <strong>' + nom + '</strong> ?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Oui, supprimer',
                cancelButtonText: 'Annuler'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('delete-form-' + id).submit();
                }
            });
        }
    </script>
{% endblock %}