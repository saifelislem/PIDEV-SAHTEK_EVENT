{% extends 'admin.html.twig' %}

{% block title %}Détails du Feedback{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Détails du Feedback</h1>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Feedback #{{ feedback.id }}</h6>
            </div>
            <div class="card-body">
                <p><strong>ID:</strong> {{ feedback.id }}</p>
                <p><strong>Mot de passe:</strong> {{ feedback.pass }}</p>
                <p><strong>Message:</strong> {{ feedback.message }}</p>
                <p><strong>Note:</strong> {{ feedback.note }}/5</p>

                <a href="{{ path('app_feedback_index') }}" class="btn btn-secondary btn-user mt-3">Retour</a>
                <a href="{{ path('app_feedback_edit', {'id': feedback.id}) }}" class="btn btn-primary btn-user mt-3">Modifier</a>
                {{ include('feedback/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}