{% extends 'admin.html.twig' %}

{% block title %}Nouveau Feedback{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Créer un nouveau Feedback</h1>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Formulaire de Feedback</h6>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form'}}) }}
                <div class="form-group">
                    {{ form_label(form.message, "Message", {'label_attr': {'class': 'font-weight-bold text-gray-700'}}) }}
                    {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.message, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.note, "Note (1-5)", {'label_attr': {'class': 'font-weight-bold text-gray-700'}}) }}
                    {{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.note, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.pass, "Mot de passe", {'label_attr': {'class': 'font-weight-bold text-gray-700'}}) }}
                    {{ form_widget(form.pass, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.pass, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <button type="submit" class="btn btn-primary btn-user btn-block">Créer</button>
                {{ form_end(form) }}

                <a href="{{ path('app_feedback_index') }}" class="btn btn-secondary btn-user btn-block mt-2">Retour à la liste</a>
            </div>
        </div>
    </div>
{% endblock %}