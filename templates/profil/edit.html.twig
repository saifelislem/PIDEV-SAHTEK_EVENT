<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Modifier mon profil - WoOx Travel</title>

    <!-- Custom fonts -->
    <link href="{{ asset('assets/back/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles -->
    <link href="{{ asset('assets/back/css/sb-admin-2.min.css') }}" rel="stylesheet">
</head>

<body class="bg-gradient-primary">
<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block">
                    <img src="{{ asset('assets/back/img/register-bg.jpg') }}" alt="Edit Profile Image" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;">
                </div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Compléter votre profil</h1>
                        </div>

                        <!-- Affichage des messages flash -->
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success" role="alert">{{ message }}</div>
                        {% endfor %}
                        {% for message in app.flashes('warning') %}
                            <div class="alert alert-warning" role="alert">{{ message }}</div>
                        {% endfor %}
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger" role="alert">{{ message }}</div>
                        {% endfor %}

                        {{ form_start(form, {'attr': {'class': 'user'}}) }}
                        <div class="form-group">
                            <label for="profil_email" class="sr-only">Email</label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Email'}}) }}
                            {{ form_errors(form.email, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="profil_num_tel" class="sr-only">Numéro de téléphone</label>
                            {{ form_widget(form.num_tel, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Numéro de téléphone'}}) }}
                            {{ form_errors(form.num_tel, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="profil_adresse" class="sr-only">Adresse</label>
                            {{ form_widget(form.adresse, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Adresse'}}) }}
                            {{ form_errors(form.adresse, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="form-group">
                            <div class="custom-control custom-checkbox small">
                                {{ form_widget(form.newsletter, {'attr': {'class': 'custom-control-input'}}) }}
                                <label class="custom-control-label" for="profil_newsletter">S'inscrire à la newsletter</label>
                            </div>
                            {{ form_errors(form.newsletter, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <button type="submit" class="btn btn-primary btn-user btn-block">Enregistrer</button>
                        {{ form_end(form) }}

                        <hr>
                        <div class="text-center">
                            <a class="small" href="{{ path('app_profil_me') }}">Voir mon profil</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap core JavaScript -->
<script src="{{ asset('assets/back/vendor/jquery/jquery.min.js') }}"></script>
<script src="{{ asset('assets/back/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

<!-- Core plugin JavaScript -->
<script src="{{ asset('assets/back/vendor/jquery-easing/jquery.easing.min.js') }}"></script>

<!-- Custom scripts -->
<script src="{{ asset('assets/back/js/sb-admin-2.min.js') }}"></script>
</body>
</html>