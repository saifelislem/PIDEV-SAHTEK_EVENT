{% extends 'base.html.twig' %}

{% block title %}{{ evenement.nom }} - Supports - Sahtek Event{% endblock %}

{% block body %}
    <div class="amazing-deals">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="section-heading text-center">
                        <h2>Supports pour <em>{{ evenement.nom }}</em></h2>
                        <p>Consultez les documents ou ressources associés à cet événement.</p>
                    </div>
                </div>
                {% if supports|length > 0 %}
                    {% for support in supports %}
                        <div class="col-lg-6 col-sm-6">
                            <div class="item">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="image">
                                            <img src="{{ asset('assets/front/images/deals-01.jpg') }}" alt="{{ support.titre }}"
                                                 onerror="this.src='{{ asset('assets/front/images/deals-01.jpg') }}'">
                                        </div>
                                    </div>
                                    <div class="col-lg-6 align-self-center">
                                        <div class="content">
                                            <span class="info">Type : {{ support.type|default('Non spécifié') }}</span>
                                            <h4>{{ support.titre }}</h4>
                                            <p>Lien vers le support associé.</p>
                                            <div class="main-button">
                                                <a href="{{ support.url }}" target="_blank">Consulter</a>
            
            {# Vérification de la permission DOWNLOAD #}
            {% for permission in support.supportpermissions %}
                {% if permission.permission_type == 'DOWNLOAD' %}
                    <a href="{{ support.url }}" download class="btn btn-primary">Télécharger</a>
                    {# Affiche le bouton de téléchargement si la permission est "DOWNLOAD" #}
                {% endif %}
            {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="col-lg-12">
                        <p>Aucun support disponible pour cet événement.</p>
                    </div>
                {% endif %}
                <div class="col-lg-12">
                    <div class="main-button text-center">
                        <a href="{{ path('app_evenement_details', {'id': evenement.id}) }}">Retour aux Détails</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}