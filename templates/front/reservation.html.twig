{% extends 'base.html.twig' %}

{% block title %}Réservation - Sahtek Event{% endblock %}

{% block body %}
    <div class="second-page-heading">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h4>Réservez Votre Participation</h4>
                    <h2>{{ evenement.nom }}</h2>
                    <p>Participez à cet événement unique à {{ evenement.lieu|default('Lieu non spécifié') }} le {{ evenement.date|date('d M Y à H:i') }}.</p>
                    <div class="main-button"><a href="{{ path('app_evenement_index_front') }}#events">Retour aux Événements</a></div>
                </div>
            </div>
        </div>
    </div>

    <div class="more-info reservation-info">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-sm-6">
                    <div class="info-item">
                        <i class="fa fa-phone"></i>
                        <h4>Contactez-nous</h4>
                        <a href="#">+216 123 456 78</a>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6">
                    <div class="info-item">
                        <i class="fa fa-envelope"></i>
                        <h4>Par Email</h4>
                        <a href="#">contact@sahtekevent.com</a>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6">
                    <div class="info-item">
                        <i class="fa fa-map-marker"></i>
                        <h4>Notre Bureau</h4>
                        <a href="#">Tunis, Tunisie</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="reservation-form">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div id="map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!m12!1m3!1d3193.228073135614!2d10.16507931531666!3d36.80649497994702!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12fd337f5e7b32e5%3A0x2eabf43feda9e43f!2sTunis%2C%20Tunisia!5e0!3m2!1sen!2stn!4v1698765432100!5m2!1sen!2stn"
                                width="100%" height="450px" style="border:0; border-top-left-radius: 23px; border-top-right-radius: 23px;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                </div>
                <div class="col-lg-12">
                    <form id="reservation-form" method="post" action="{{ path('app_evenement_participate', {'id': evenement.id}) }}">
                        {{ form_start(form, {'attr': {'class': 'form'}}) }}
                        <div class="row">
                            <div class="col-lg-12">
                                <h4>Réservez Votre Place pour <em>{{ evenement.nom }}</em></h4>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    {{ form_label(form.moyenPaiement, 'Moyen de Paiement', {'label_attr': {'class': 'font-weight-bold'}}) }}
                                    {{ form_widget(form.moyenPaiement, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.moyenPaiement, {'attr': {'class': 'text-danger'}}) }}
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" class="main-button">Confirmer Ma Réservation</button>
                                </fieldset>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}