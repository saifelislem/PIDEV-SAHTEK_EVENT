<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}WoOx Travel - Événements{% endblock %}</title>

    <!-- Bloc pour CSS -->
    {% block css %}
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
        <!-- Bootstrap depuis le dossier local -->
        <link href="{{ asset('assets/front/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('assets/front/css/fontawesome.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/front/css/templatemo-woox-travel.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/front/css/owl.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/front/css/animate.css') }}">
        <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css"/>
    {% endblock %}
</head>

<body>
<!-- Preloader -->
<div id="js-preloader" class="js-preloader">
    <div class="preloader-inner">
        <span class="dot"></span>
        <div class="dots">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </div>
</div>

<!-- Header Area -->
<header class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <a href="{{ path('app_evenement_index') }}" class="logo">
                        <img src="{{ asset('assets/front/images/logo.png') }}" alt="WoOx Travel">
                    </a>
                    <ul class="nav">
                        <li><a href="{{ path('app_evenement_index') }}" class="{% if app.request.attributes.get('_route') == 'app_front_evenement_index' %}active{% endif %}">Accueil</a></li>
                    </ul>
                    <a class="menu-trigger">
                        <span>Menu</span>
                    </a>
                </nav>
            </div>
        </div>
    </div>
</header>

<!-- Contenu principal -->
{% block body %}{% endblock %}

<!-- Footer -->
<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright © {{ "now"|date("Y") }} <a href="#">WoOx Travel</a> Company. Tous droits réservés.
                    <br>Design: <a href="https://templatemo.com" target="_blank" title="free CSS templates">TemplateMo</a></p>
            </div>
        </div>
    </div>
</footer>

<!-- Bloc pour JS -->
{% block js %}
    <!-- jQuery et Bootstrap depuis les fichiers locaux -->
    <script src="{{ asset('assets/front/vendor/jquery/jquery.min.js') }}"></script> <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="{{ asset('assets/front/vendor/bootstrap/js/bootstrap.min.js') }}"></script> <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="{{ asset('assets/front/js/isotope.min.js') }}"></script>
    <script src="{{ asset('assets/front/js/owl-carousel.js') }}"></script>
    <script src="{{ asset('assets/front/js/wow.js') }}"></script>
    <script src="{{ asset('assets/front/js/tabs.js') }}"></script>
    <script src="{{ asset('assets/front/js/popup.js') }}"></script>
    <script src="{{ asset('assets/front/js/custom.js') }}"></script>
    <script>
        $(document).ready(function() {
            function bannerSwitcher() {
                var next = $('.sec-1-input').filter(':checked').next('.sec-1-input');
                if (next.length) next.prop('checked', true);
                else $('.sec-1-input').first().prop('checked', true);
            }
            var bannerTimer = setInterval(bannerSwitcher, 5000);
            $('nav .controls label').click(function() {
                clearInterval(bannerTimer);
                bannerTimer = setInterval(bannerSwitcher, 5000);
            });
        });
    </script>
{% endblock %}
</body>
</html>