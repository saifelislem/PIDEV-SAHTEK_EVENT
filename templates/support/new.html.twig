{% extends 'admin.html.twig' %}

{% block title %}Nouveau Support{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Créer un nouveau Support</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Formulaire de Support</h6>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'form', 'novalidate': 'novalidate'}}) }}

            
            {# Champ fichier #}
           {# Champ fichier #}
            <div class="form-group">
            {{ form_widget(form.fichier) }}
            {% for error in form.fichier.vars.errors %}
           <div class="text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>

            

            {# Champ Type #}
            <div class="form-group">
                {{ form_label(form.type, null, {'label_attr': {'class': 'font-weight-bold text-gray-700'}}) }}
                {{ form_widget(form.type) }}
                {% for error in form.type.vars.errors %}
                    <div class="text-danger">{{ error.message }}</div>
                {% endfor %}
            </div>
            

            <div class="form-group">
                {{ form_label(form.evenement, null, {'label_attr': {'class': 'font-weight-bold text-gray-700'}}) }}
                {{ form_widget(form.evenement) }}
                {% for error in form.evenement.vars.errors %}
                    <div class="text-danger">{{ error.message }}</div>
                {% endfor %}
            </div>
            
            {# Champ Titre #}
            <div class="form-group">
                {{ form_label(form.titre, null, {'label_attr': {'class': 'font-weight-bold text-gray-700'}}) }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                {% for error in form.titre.vars.errors %}
                    <div class="text-danger">{{ error.message }}</div>
                {% endfor %}
            </div>
            

            <button type="submit" class="btn btn-primary btn-user btn-block">Créer</button>

            {{ form_end(form) }}

            <a href="{{ path('app_support_index') }}" class="btn btn-secondary btn-user btn-block mt-2">Retour à la liste</a>
        </div>
    </div>
</div>



{% endblock %}
