{% extends 'admin.html.twig' %}

{% block title %}Support{% endblock %}

{% block body %}
    <h1>Support</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Url</th>
            <th>Type</th>
            <th>Événement</th>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for support in supports %}
            <tr>
                <td>{{ support.url }}</td>
                <td>{{ support.type }}</td>
                <td>{{ support.evenement ? support.evenement.nom : 'N/A' }}</td>
                <td>{{ support.titre }}</td>
                <td>
                    <a href="{{ path('app_support_show', {'id': support.id}) }}">show</a>
                    <a href="{{ path('app_support_edit', {'id': support.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_support_new') }}">Create new</a>
{% endblock %}