{% extends 'admin.html.twig' %}

{% block title %}Support {% endblock %}

{% block body %}
    <h1>Support </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Url</th>
                <th>Type</th>
                <th>Id_evenementAssocie</th>
                <th>Titre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for support in supports %}
            <tr>
                <td>{{ support.url }}</td>
                <td>{{ support.type }}</td>
                <td>{{ evenement.nom }}</td>
                <td>{{ support.titre }}</td>
                <td>
                    <a href="{{ path('app_support_show', {'id': support.id}) }}">show</a>
                    <a href="{{ path('app_support_edit', {'id': support.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_support_new') }}">Create new</a>
{% endblock %}
