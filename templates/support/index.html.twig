{% extends 'admin.html.twig' %}

{% block title %}Supports{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800"></h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Liste des Supports</h6>
                <div class="ml-auto">
                    <form method="get" action="{{ path('app_support_index') }}" class="form-inline">
                        <div class="dropdown">
                            <button class="btn btn-primary btn-user dropdown-toggle" type="button" id="sortDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Trier
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="sortDropdown">
                                <a class="dropdown-item {{ current_sort == 'id' ? 'active' : '' }}" href="{{ path('app_support_index', {'sort': 'id', 'order': current_order}) }}">Par défaut</a>
                                <a class="dropdown-item {{ current_sort == 'titre' ? 'active' : '' }}" href="{{ path('app_support_index', {'sort': 'titre', 'order': current_order}) }}">Titre</a>
                                <a class="dropdown-item {{ current_sort == 'type' ? 'active' : '' }}" href="{{ path('app_support_index', {'sort': 'type', 'order': current_order}) }}">Type</a>
                            </div>
                        </div>
                        <button type="submit" name="order" value="{{ current_order == 'asc' ? 'desc' : 'asc' }}" class="btn btn-primary btn-user ml-2">
                            {{ current_order == 'asc' ? '↓' : '↑' }}
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="supportsTable">
                        <thead class="thead-light">
                        <tr>
                            <th>URL</th>
                            <th>Type</th>
                            <th>Événement</th>
                            <th>Titre</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for support in supports %}
                            <tr>
                                <td>{{ support.url ? support.url : 'N/A' }}</td>
                                <td>
                                    {# Debug: Raw type value: {{ support.type }} #}
                                    {% if support.type|lower == 'document' %}
                                        <span class="badge badge-success">Document</span>
                                    {% elseif support.type|lower == 'ppt' %}
                                        <span class="badge badge-info">PPT</span>
                                    {% elseif support.type|lower == 'vidéo' %}
                                        <span class="badge badge-primary">Vidéo</span>
                                    {% else %}
                                        {{ support.type ?: 'N/A' }}
                                    {% endif %}
                                </td>
                                <td>{{ support.evenement ? support.evenement.nom : 'N/A' }}</td>
                                <td>{{ support.titre }}</td>
                                <td>
                                    <a href="{{ path('app_support_show', {'id': support.id}) }}" class="btn btn-sm btn-info" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center">Aucun support trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <a href="{{ path('app_support_new') }}" class="btn btn-primary btn-user mt-3">
                    <i class="fas fa-plus"></i> Créer un nouveau support
                </a>
            </div>
        </div>
    </div>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset('assets/back/vendor/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/back/vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#supportsTable').DataTable({
                "ordering": false, // Disable client-side sorting
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/French.json"
                }
            });
        });
    </script>
{% endblock %}