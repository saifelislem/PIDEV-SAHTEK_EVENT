{% extends 'admin.html.twig' %}

{% block title %}Supports{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Supports</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Liste des Supports</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="thead-light">
                        <tr>
                            <th>URL</th>
                            <th>Type</th>
                            <th>Événement</th>
                            <th>Titre</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for support in supports %}
                            <tr>
                                <td>{{ support.url ? support.url : 'N/A' }}</td>
                                <td>{{ support.type }}</td>
                                <td>{{ support.evenement ? support.evenement.nom : 'N/A' }}</td>
                                <td>{{ support.titre }}</td>
                                <td>
                                    <a href="{{ path('app_support_show', {'id': support.id}) }}" class="btn btn-sm btn-info">Voir</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center">Aucun support trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <a href="{{ path('app_support_new') }}" class="btn btn-primary btn-user mt-3">Créer un nouveau support</a>
            </div>
        </div>
    </div>
{% endblock %}