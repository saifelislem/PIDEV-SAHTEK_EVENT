{% extends 'base.html.twig' %}

{% block title %}Connexion - WoOx Travel{% endblock %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css"/>
    <link rel="stylesheet" href="{{ asset('assets/front/fonts/material-design-iconic-font.min.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/front/css/style.css') }}">
{% endblock %}

{% block body %}
    <section class="sign-in" style="margin-top: 100px;">
        <div class="container">
            <div class="signin-content">
                <div class="signin-image">
                    <figure><img src="{{ asset('assets/front/images/about-content-bg.jpg') }}" alt="sign in image"></figure>
                </div>

                <div class="signin-form">
                    <h2 class="form-title">Connexion</h2>
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form method="post" action="{{ path('app_login') }}" class="register-form" id="login-form">
                        <div class="form-group">
                            <label for="email"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input type="email" name="_username" id="email" placeholder="Votre Email" required="required" autofocus="autofocus" value="{{ last_username }}"/>
                        </div>
                        <div class="form-group">
                            <label for="password"><i class="zmdi zmdi-lock"></i></label>
                            <input type="password" name="_password" id="password" placeholder="Mot de passe" required="required"/>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="form-group form-button">
                            <button type="submit" class="form-submit">Se connecter</button>
                        </div>
                    </form>
                    <div class="register-link">
                        <span>Pas de compte ?</span>
                        <a href="{{ path('app_register') }}">Inscrivez-vous ici</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset('assets/back/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/back/js/main.js') }}"></script>
{% endblock %}