{% extends 'admin.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800"></h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Liste des Services</h6>
                <div class="ml-auto">
                    <form method="get" action="{{ path('app_service_index') }}" class="form-inline">
                        <div class="dropdown mr-2">
                            <button class="btn btn-primary btn-user dropdown-toggle" type="button" id="sortDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Trier
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="sortDropdown">
                                <a class="dropdown-item {{ current_sort == 'default' ? 'active' : '' }}" href="{{ path('app_service_index', {'sort': 'default', 'order': current_order}) }}">Par défaut</a>
                                <a class="dropdown-item {{ current_sort == 'type' ? 'active' : '' }}" href="{{ path('app_service_index', {'sort': 'type', 'order': current_order}) }}">Type</a>
                                <a class="dropdown-item {{ current_sort == 'cout' ? 'active' : '' }}" href="{{ path('app_service_index', {'sort': 'cout', 'order': current_order}) }}">Coût</a>
                            </div>
                        </div>
                        <input type="hidden" name="sort" value="{{ current_sort }}">
                        <button type="submit" name="order" value="{{ current_order == 'asc' ? 'desc' : 'asc' }}" class="btn btn-primary btn-user">
                            {{ current_order == 'asc' ? '↓' : '↑' }}
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="servicesTable">
                        <thead class="thead-light">
                        <tr>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Coût (TND)</th>
                            <th>Événement</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for service in services %}
                            <tr>
                                <td>
                                    {% if service.type|lower == 'transport' %}
                                        <span class="badge badge-primary">Transport</span>
                                    {% elseif service.type|lower == 'hébergement' %}
                                        <span class="badge badge-info">Hébergement</span>
                                    {% elseif service.type|lower == 'restauration' %}
                                        <span class="badge badge-success">Restauration</span>
                                    {% else %}
                                        {{ service.type ?: 'N/A' }}
                                    {% endif %}
                                </td>
                                <td>{{ service.description ?: 'N/A' }}</td>
                                <td>{{ service.cout ? service.cout|number_format(2, ',', ' ') : 'N/A' }}</td>
                                <td>{{ service.evenement ? service.evenement.nom : 'N/A' }}</td>
                                <td>
                                    <a href="{{ path('app_service_show', {'id': service.id}) }}" class="btn btn-sm btn-info" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center">Aucun service trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <a href="{{ path('app_service_new') }}" class="btn btn-primary btn-user mt-3">
                    <i class="fas fa-plus"></i> Créer un nouveau service
                </a>
            </div>
        </div>
    </div>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset('assets/back/vendor/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/back/vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#servicesTable').DataTable({
                "ordering": false,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/French.json"
                }
            });
        });
    </script>
{% endblock %}