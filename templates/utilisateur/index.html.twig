{% extends 'admin.html.twig' %}

{% block title %}Utilisateur {% endblock %}

{% block body %}
    <h1>Utilisateur </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Role</th>
                <th>Nationalite</th>
                <th>Genre</th>
                <th>Email</th>
                <th>Permission</th>
                <th>Statut</th>
                <th>Verification_token</th>
                <th>Is_verified</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td>{{ utilisateur.nom }}</td>
                <td>{{ utilisateur.prenom }}</td>
                <td>{{ utilisateur.role ? utilisateur.role|json_encode : '' }}</td>
                <td>{{ utilisateur.nationalite }}</td>
                <td>{{ utilisateur.genre }}</td>
                <td>{{ utilisateur.email }}</td>
                <td>{{ utilisateur.permission ? 'Yes' : 'No' }}</td>
                <td>{{ utilisateur.statut ? 'Yes' : 'No' }}</td>
                <td>{{ utilisateur.verificationToken }}</td>
                <td>{{ utilisateur.isVerified ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_utilisateur_show', {'id': utilisateur.id}) }}">show</a>
                    <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_utilisateur_new') }}">Create new</a>
{% endblock %}
