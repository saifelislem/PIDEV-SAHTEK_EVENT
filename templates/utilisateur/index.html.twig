{% extends 'admin.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800"></h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Liste des Utilisateurs</h6>
                <div class="ml-auto">
                    <form method="get" action="{{ path('app_utilisateur_index') }}" class="form-inline">
                        <div class="dropdown">
                            <button class="btn btn-primary btn-user dropdown-toggle" type="button" id="sortDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Trier
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="sortDropdown">
                                <a class="dropdown-item {{ current_sort == 'id' ? 'active' : '' }}" href="{{ path('app_utilisateur_index', {'sort': 'id', 'order': current_order}) }}">Par défaut</a>
                                <a class="dropdown-item {{ current_sort == 'nom' ? 'active' : '' }}" href="{{ path('app_utilisateur_index', {'sort': 'nom', 'order': current_order}) }}">Nom</a>
                                <a class="dropdown-item {{ current_sort == 'role' ? 'active' : '' }}" href="{{ path('app_utilisateur_index', {'sort': 'role', 'order': current_order}) }}">Rôle</a>
                                <a class="dropdown-item {{ current_sort == 'statut' ? 'active' : '' }}" href="{{ path('app_utilisateur_index', {'sort': 'statut', 'order': current_order}) }}">Statut</a>
                            </div>
                        </div>
                        <button type="submit" name="order" value="{{ current_order == 'asc' ? 'desc' : 'asc' }}" class="btn btn-primary btn-user ml-2">
                            {{ current_order == 'asc' ? '↓' : '↑' }}
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="usersTable">
                        <thead class="thead-light">
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Rôle</th>
                            <th>Nationalité</th>
                            <th>Genre</th>
                            <th>Email</th>
                            <th>Statut</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for utilisateur in utilisateurs %}
                            <tr>
                                <td>{{ utilisateur.nom }}</td>
                                <td>{{ utilisateur.prenom }}</td>
                                <td>
                                    {% if utilisateur.role|length > 0 %}
                                        {% for role in utilisateur.role %}
                                            <span class="badge mr-1 {% if role == 'ROLE_ADMIN' %}badge-primary{% elseif role == 'ROLE_USER' %}badge-info{% else %}badge-secondary{% endif %}">
                                                {{ role|replace({'ROLE_': ''})|capitalize }}
                                            </span>
                                        {% endfor %}
                                    {% else %}
                                        N/A
                                    {% endif %}
                                </td>
                                <td>{{ utilisateur.nationalite }}</td>
                                <td>{{ utilisateur.genre }}</td>
                                <td>{{ utilisateur.email }}</td>
                                <td>
                                    {% if utilisateur.statut %}
                                        <span class="badge badge-success">Actif</span>
                                    {% else %}
                                        <span class="badge badge-danger">Inactif</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('app_utilisateur_show', {'id': utilisateur.id}) }}" class="btn btn-sm btn-info" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center">Aucun utilisateur trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <a href="{{ path('app_utilisateur_new') }}" class="btn btn-primary btn-user mt-3"><i class="fas fa-plus"></i> Créer un nouvel utilisateur</a>
            </div>
        </div>
    </div>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset('assets/back/vendor/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/back/vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#usersTable').DataTable({
                "ordering": false, // Désactiver le tri côté client
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/French.json"
                }
            });
        });
    </script>
{% endblock %}