{% extends 'admin.html.twig' %}

{% block title %}Détails de l’Utilisateur{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Détails de l’Utilisateur</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Utilisateur #{{ utilisateur.id }}</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ utilisateur.id }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ utilisateur.nom }}</td>
                    </tr>
                    <tr>
                        <th>Prénom</th>
                        <td>{{ utilisateur.prenom }}</td>
                    </tr>
                    <tr>
                        <th>Rôle</th>
                        <td>{{ utilisateur.role ? utilisateur.role|join(', ') : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th>Nationalité</th>
                        <td>{{ utilisateur.nationalite }}</td>
                    </tr>
                    <tr>
                        <th>Genre</th>
                        <td>{{ utilisateur.genre }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ utilisateur.email }}</td>
                    </tr>
                    <tr>
                        <th>Permission</th>
                        <td>{{ utilisateur.permission ? 'Oui' : 'Non' }}</td>
                    </tr>
                    <tr>
                        <th>Statut</th>
                        <td>{{ utilisateur.statut ? 'Actif' : 'Inactif' }}</td>
                    </tr>
                    <tr>
                        <th>Vérifié</th>
                        <td>{{ utilisateur.isVerified ? 'Oui' : 'Non' }}</td>
                    </tr>
                    <tr>
                        <th>Token de vérification</th>
                        <td>{{ utilisateur.verificationToken ?: 'N/A' }}</td>
                    </tr>
                    </tbody>
                </table>
                <div class="mt-3">
                    <a href="{{ path('app_utilisateur_index') }}" class="btn btn-sm btn-secondary" title="Retour à la liste">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}" class="btn btn-sm btn-primary" title="Modifier">
                        <i class="fas fa-edit"></i>
                    </a>
                    <form id="delete-form-{{ utilisateur.id }}"
                          method="post"
                          action="{{ path('app_utilisateur_delete', {'id': utilisateur.id}) }}"
                          style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ utilisateur.id) }}">
                        <button type="button"
                                class="btn btn-sm btn-danger"
                                title="Supprimer"
                                onclick="confirmDelete({{ utilisateur.id }}, '{{ (utilisateur.nom ~ ' ' ~ utilisateur.prenom)|e('js') }}')">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete(id, nom) {
            Swal.fire({
                title: 'Confirmer la suppression',
                html: 'Voulez-vous vraiment supprimer l\'utilisateur <strong>' + nom + '</strong> ?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Oui, supprimer',
                cancelButtonText: 'Annuler'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('delete-form-' + id).submit();
                }
            });
        }
    </script>
{% endblock %}