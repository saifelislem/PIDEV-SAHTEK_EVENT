{% extends 'admin.html.twig' %}

{% block title %}Détails de la Permission de Support{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Détails de la Permission de Support</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Permission #{{ supportpermission.id }}</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Type de Permission</th>
                        <td>
                            {% if supportpermission.permissionType|lower == 'lecture' %}
                                <span class="badge badge-success">Lecture</span>
                            {% elseif supportpermission.permissionType|lower == 'téléchargement' %}
                                <span class="badge badge-info">Téléchargement</span>
                            {% else %}
                                {{ supportpermission.permissionType ?: 'N/A' }}
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Date de Début</th>
                        <td>{{ supportpermission.startDate ? supportpermission.startDate|date('d/m/Y') : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th>Date de Fin</th>
                        <td>{{ supportpermission.endDate ? supportpermission.endDate|date('d/m/Y') : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th>Support Associé</th>
                        <td>{{ supportpermission.support ? supportpermission.support.titre : 'N/A' }}</td>
                    </tr>
                    </tbody>
                </table>
                <div class="mt-3">
                    <a href="{{ path('app_supportpermission_index') }}" class="btn btn-sm btn-secondary" title="Retour à la liste">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <a href="{{ path('app_supportpermission_edit', {'id': supportpermission.id}) }}" class="btn btn-sm btn-primary" title="Modifier">
                        <i class="fas fa-edit"></i>
                    </a>
                    <form id="delete-form-{{ supportpermission.id }}"
                          method="post"
                          action="{{ path('app_supportpermission_delete', {'id': supportpermission.id}) }}"
                          style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ supportpermission.id) }}">
                        <button type="button"
                                class="btn btn-sm btn-danger"
                                title="Supprimer"
                                onclick="confirmDelete({{ supportpermission.id }}, '{{ (supportpermission.support ? supportpermission.support.titre : 'Permission #' ~ supportpermission.id)|e('js') }}')">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete(id, titre) {
            Swal.fire({
                title: 'Confirmer la suppression',
                html: 'Voulez-vous vraiment supprimer la permission pour <strong>' + titre + '</strong> ?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Oui, supprimer',
                cancelButtonText: 'Annuler'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('delete-form-' + id).submit();
                }
            });
        }
    </script>
{% endblock %}