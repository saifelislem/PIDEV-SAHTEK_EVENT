{% extends 'admin.html.twig' %}

{% block title %}Événement{% endblock %}

{% block body %}
    <h1>Événements</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Description</th>
            <th>Date</th>
            <th>Lieu</th>
            <th>Statut</th>
            <th>Capacité Max</th>
            <th>Image</th>
            <th>Type</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.nom }}</td>
                <td>{{ evenement.description }}</td>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d H:i') : '' }}</td>
                <td>{{ evenement.lieu }}</td>
                <td>{{ evenement.statut }}</td>
                <td>{{ evenement.capaciteMax }}</td>
                <td>{{ evenement.image }}</td>
                <td>{{ evenement.type }}</td>
                <td>
                    <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}">show</a>
                    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_evenement_new') }}">Create new</a>
{% endblock %}