{% extends 'base.html.twig' %}

{% block title %}Liste des Événements{% endblock %}

{% block body %}
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Liste des Événements</h1>
            <a href="{{ path('app_evenement_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                <i class="fas fa-plus fa-sm text-white-50"></i> Créer un nouvel événement
            </a>
        </div>

        <!-- Content Row -->
        <div class="row">
            <div class="col-xl-12 col-lg-12">
                <div class="card shadow mb-4">
                    <!-- Card Header -->
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Événements</h6>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nom</th>
                                    <th>Description</th>
                                    <th>Date</th>
                                    <th>Lieu</th>
                                    <th>Statut</th>
                                    <th>Capacité Max</th>
                                    <th>Image</th>
                                    <th>Type</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for evenement in evenements %}
                                    <tr>
                                        <td>{{ evenement.id }}</td>
                                        <td>{{ evenement.nom }}</td>
                                        <td>{{ evenement.description }}</td>
                                        <td>{{ evenement.date ? evenement.date|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ evenement.lieu }}</td>
                                        <td>{{ evenement.statut }}</td>
                                        <td>{{ evenement.capaciteMax }}</td>
                                        <td>
                                            {% if evenement.image %}
                                                <img src="{{ asset('uploads/images/' ~ evenement.image) }}" alt="{{ evenement.nom }}" style="max-width: 50px;">
                                            {% else %}
                                                Aucune image
                                            {% endif %}
                                        </td>
                                        <td>{{ evenement.type }}</td>
                                        <td>
                                            <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn btn-info btn-sm">Voir</a>
                                            <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-primary btn-sm">Éditer</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="10" class="text-center">Aucun événement trouvé</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <!-- Ajouter DataTables pour une table interactive (optionnel) -->
    <script src="{{ asset('vendor/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable();
        });
    </script>
{% endblock %}

{% block css %}
    {{ parent() }}
    <!-- Styles pour DataTables (optionnel) -->
    <link href="{{ asset('vendor/datatables/dataTables.bootstrap4.min.css') }}" rel="stylesheet">
{% endblock %}