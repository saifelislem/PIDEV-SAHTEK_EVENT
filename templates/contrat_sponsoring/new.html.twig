{% extends 'admin.html.twig' %}

{% block title %}Nouveau Contrat de Sponsoring{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Ajouter un nouveau contrat de sponsoring</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Formulaire de contrat de sponsoring</h6>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'form', 'novalidate': 'novalidate'}}) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.montant, null, {'label_attr': {'class': 'font-weight-bold text-primary'}}) }}
                            {{ form_widget(form.montant, {'attr': {'class': 'form-control shadow-sm'}}) }}
                            {{ form_errors(form.montant, {'attr': {'class': 'text-danger small'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.utilisateur, null, {'label_attr': {'class': 'font-weight-bold text-primary'}}) }}
                            {{ form_widget(form.utilisateur, {'attr': {'class': 'form-control shadow-sm selectpicker'}}) }}
                            {{ form_errors(form.utilisateur, {'attr': {'class': 'text-danger small'}}) }}
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group mb-3">
                            {{ form_label(form.description, null, {'label_attr': {'class': 'font-weight-bold text-primary'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control shadow-sm', 'rows': '3'}}) }}
                            {{ form_errors(form.description, {'attr': {'class': 'text-danger small'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            {{ form_label(form.evenement, null, {'label_attr': {'class': 'font-weight-bold text-primary'}}) }}
                            {{ form_widget(form.evenement, {'attr': {'class': 'form-control shadow-sm selectpicker'}}) }}
                            {{ form_errors(form.evenement, {'attr': {'class': 'text-danger small'}}) }}
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group mb-3">
                            {{ form_label(form.produitsponsorings, null, {'label_attr': {'class': 'font-weight-bold text-primary'}}) }}
                            {{ form_widget(form.produitsponsorings, {'attr': {'class': 'form-control shadow-sm selectpicker'}}) }}
                            {{ form_errors(form.produitsponsorings, {'attr': {'class': 'text-danger small'}}) }}
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-user btn-block btn-lg">Créer</button>
                {{ form_rest(form) }}
                {{ form_end(form) }}

                <a href="{{ path('app_contrat_sponsoring_index') }}" class="btn btn-secondary btn-user btn-block btn-lg mt-2">Retour à la liste</a>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
{% endblock %}