{% extends 'admin.html.twig' %}

{% block title %}Détails du Contrat de Sponsoring{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Détails du Contrat de Sponsoring</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Contrat #{{ contrat_sponsoring.id }}</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Montant</th>
                        <td>
                            {% if contrat_sponsoring.montant > 0 %}
                                <span class="badge badge-success">{{ contrat_sponsoring.montant|number_format(2, ',', ' ') }} €</span>
                            {% else %}
                                <span class="badge badge-danger">{{ contrat_sponsoring.montant|number_format(2, ',', ' ') }} €</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ contrat_sponsoring.description|default('N/A') }}</td>
                    </tr>
                    <tr>
                        <th>Utilisateur</th>
                        <td>{{ contrat_sponsoring.utilisateur ? contrat_sponsoring.utilisateur.nom|default('N/A') : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th>Événement</th>
                        <td>{{ contrat_sponsoring.evenement ? contrat_sponsoring.evenement.nom|default('N/A') : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th>Produits de Sponsoring</th>
                        <td>
                            {% if contrat_sponsoring.produitsponsorings|length > 0 %}
                                <ul>
                                    {% for produit in contrat_sponsoring.produitsponsorings %}
                                        <li>{{ produit.nom|default('N/A') }}</li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                Aucun produit
                            {% endif %}
                        </td>
                    </tr>
                    </tbody>
                </table>
                <div class="mt-3">
                    <a href="{{ path('app_contrat_sponsoring_index') }}" class="btn btn-sm btn-secondary" title="Retour à la liste">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <a href="{{ path('app_contrat_sponsoring_edit', {'id': contrat_sponsoring.id}) }}" class="btn btn-sm btn-primary" title="Modifier">
                        <i class="fas fa-edit"></i>
                    </a>
                    <form id="delete-form-{{ contrat_sponsoring.id }}"
                          method="post"
                          action="{{ path('app_contrat_sponsoring_delete', {'id': contrat_sponsoring.id}) }}"
                          style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contrat_sponsoring.id) }}">
                        <button type="button"
                                class="btn btn-sm btn-danger"
                                title="Supprimer"
                                onclick="confirmDelete({{ contrat_sponsoring.id }})">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-Avb2QiuDEEvB4bZJYdft2mNjVShBftLdPG8FJ0V7irTLQ8Uo0qcPxh4Plq7G5tGm0rU+1SPhVotteLpBERet7svw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: 'Confirmer la suppression',
                html: 'Voulez-vous vraiment supprimer le contrat <strong>#' + id + '</strong> ?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Oui, supprimer',
                cancelButtonText: 'Annuler'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('delete-form-' + id).submit();
                }
            });
        }
    </script>
{% endblock %}